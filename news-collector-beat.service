[Unit]
Description=News Collector Celery Beat
After=network.target redis-server.service

[Service]
Type=simple
User=avxz
Group=avxz
WorkingDirectory=/opt/darkpool_collector
Environment="PATH=/opt/darkpool_collector/venv/bin"
ExecStart=/opt/darkpool_collector/venv/bin/celery -A news_celery_app.app beat --loglevel=info
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target 