[Unit]
Description=News Collector Celery Beat
After=network.target redis.service news-collector-worker.service

[Service]
Type=simple
User=avxz
Group=avxz
WorkingDirectory=/opt/darkpool_collector
Environment="PATH=/opt/darkpool_collector/venv/bin"
ExecStart=/opt/darkpool_collector/venv/bin/celery -A celery_app beat --loglevel=info
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target 